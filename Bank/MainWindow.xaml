<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Icon="Images/logo.png"
        xmlns:self="clr-namespace:Bank"        
        xmlns:props="clr-namespace:Bank.Properties"
        Height="400" Width="600" MinWidth="200" MinHeight="300" >
    <Window.Resources>
        <self:CurrencyConverter x:Key="CurrencyConverter" />
    </Window.Resources>
    <Grid Margin="0,10,0,0">
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="{x:Static props:Resources.LABEL_ACCOUNT}" />
                    <ComboBox x:Name="comboBox" Grid.Column="1" MinWidth="100" Margin="0,3,0,3" HorizontalAlignment="Left" SelectionChanged="comboBoxAccounts_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Grid.Column="2" x:Name="textBlockCurrent" Margin="20,5,5,5"/>
                    <TextBlock Grid.Column="3" x:Name="textBlockLast" Margin="20,5,5,5"/>
                    <Slider x:Name="slider" Grid.Column="4" Margin="0,3,0,0" Visibility="Hidden" Minimum="0" Maximum="0" ValueChanged="slider_ValueChanged" />
                    <TextBlock Grid.Column="5" x:Name="textBlockFirst" Margin="5,5,5,5"/>
                </Grid>
            </Grid>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="textBlockStatus" TextTrimming="CharacterEllipsis" />
                </StatusBarItem>
            </StatusBar>
            <ListView x:Name="listView">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{x:Static props:Resources.COLUMN_DAY}" Width="50" DisplayMemberBinding="{Binding Day}"/>
                        <GridViewColumn Header="{x:Static props:Resources.COLUMN_TEXT}" Width="200" DisplayMemberBinding="{Binding Text}"/>
                        <GridViewColumn Header="{x:Static props:Resources.COLUMN_AMOUNT}" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Amount, Converter={StaticResource CurrencyConverter}}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{x:Static props:Resources.COLUMN_BALANCE}" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CurrentBalance, Converter={StaticResource CurrencyConverter}}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
